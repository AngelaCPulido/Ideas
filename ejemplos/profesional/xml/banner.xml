		<autoPlay>true</autoPlay>
		<useNumButtons>true</useNumButtons>
		
		<!-- 
		invertButtons:
		true = the default behaviour for button color, button backgrounds will be inverted
		false = buttons will have a black transparent background
		 -->
		<invertButtons>false</invertButtons>
		
		<!-- randomizeOrder = choose to randomize the order of the slides below -->
		<randomizeOrder>false</randomizeOrder>
		
		<!-- randomSlide = for autoPlay, load in a random slide -->
		<randomSlide>false</randomSlide>
		
		<!-- infoBehaviour = forceOn, forceOff, perSlide -->
		<infoBehaviour>perSlide</infoBehaviour>
		
		<!-- this is a global option.  If set to false, the info button will never be shown.  If set to true, you can adjust it per slide below -->
		<useInfoButton>true</useInfoButton>
		
		<useStylesheet>true</useStylesheet>
		<stylesheetURL>css/textstyle.css</stylesheetURL>
		
	</settings>
	
